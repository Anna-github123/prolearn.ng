{{!
    Page footer.
}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div id="goto-top-link" style="position: fixed; bottom: 20px; right: 20px;">
    {{! go to top is sticky to footer so needs to be sibling }}
    <a class="btn btn-light" role="button" href="#" aria-label="{{#str}} totop, theme_boost {{/str}}"
       style="display: flex; align-items: center; justify-content: center; width: 40px; height: 40px; border-radius: 50%; border: 1px solid #ffffff; background-color: #f8f9fa; text-align: center; line-height: 0;">
        {{#pix}} i/up, core{{/pix}}
    </a>
    <style>
        #goto-top-link a i {
            font-size: 24px; /* Adjust this value to increase or decrease the icon size */
        }
    </style>
</div>

<!-- Custom Footer for Moodle -->
<footer id="page-footer" class="py-3 text-light" style="border-top-right-radius: 30px;">
    <div class="container" style="max-width: 1200px; margin: 0 auto;">
        <div class="row" style="display: flex; flex-wrap: wrap;">
            <!-- Logo Section -->
            <div class="col-md-3" style="padding: 20px;">
                <a href="https://prolearn.ng/" aria-label="ProLearn Home">
                    <img src="/theme/vxg_boost/images/prolearn_logo.png" alt="ProLearn Logo" style="max-width: 150px; height: auto;">
                </a>
            </div>

            <!-- User Information Link -->
            <div class="col-md-4" style="padding: 20px;">
                <h4>User Information</h4>
                <!-- Standard Moodle Footer Elements -->
                <div id="course-footer">{{{ output.course_footer }}}</div>
                {{# output.page_doc_link }}
                    <p class="helplink">{{{ output.page_doc_link }}}</p>
                {{/ output.page_doc_link }}
                {{{ output.login_info }}}
                <div class="tool_usertours-resettourcontainer"></div>
                <nav class="nav navbar-nav d-md-none" aria-label="{{#str}}custommenu, admin{{/str}}">
                    {{# output.custom_menu_flat }}
                        <ul class="list-unstyled pt-3">
                            {{> theme_boost/custom_menu_footer }}
                        </ul>
                    {{/ output.custom_menu_flat }}
                </nav>
                {{{ output.standard_end_of_body_html }}}
                <!-- Additional Links -->
                <div class="mt-3">
                    <a href="https://prolearn.ng/mod/page/view.php?id=105" style="color: #ffffff; text-decoration: none;">About Us</a><br>
                </div>
            </div>

            <!-- Social Media Links -->
            <div class="col-md-4" style="padding: 20px;">
                <h4>Follow Us</h4>
                <style>
                    .social-icons {
                        display: flex;
                        gap: 10px; /* Space between icons */
                    }
                    .social-icons a {
                        text-decoration: none; /* Remove underline */
                    }
                    .social-icons i {
                        font-size: 30px; /* Icon size */
                        color: #ffffff; /* Icon color */
                    }
                </style>
                <div class="social-icons">
                    <a href="https://instagram.com/" target="_blank" aria-label="Instagram">
                        <i class="fa-brands fa-instagram"></i>
                    </a>
                    <a href="https://linkedin.com/" target="_blank" aria-label="LinkedIn">
                        <i class="fa-brands fa-linkedin"></i>
                    </a>
                    <a href="https://twitter.com/" target="_blank" aria-label="Twitter">
                        <i class="fa-brands fa-twitter"></i>
                    </a>
                    <a href="mailto:education@prolearn.ng" aria-label="Email">
                        <i class="fa-solid fa-envelope"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Copyright Statement -->
        <div class="row mt-3">
            <div class="col-md-12 text-center">
                <p>&copy; 2024 <a href="https://prolearn.ng/" style="color: #ffffff; text-decoration: none;">ProLearn</a>. All Rights Reserved.</p>
            </div>
        </div>
    </div>
</footer>

<!-- Custom JavaScript for Smooth Scrolling -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var gotoTopButton = document.querySelector('#goto-top-link a');
        if (gotoTopButton) {
            gotoTopButton.addEventListener('click', function(event) {
                event.preventDefault();
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        }
    });
</script>